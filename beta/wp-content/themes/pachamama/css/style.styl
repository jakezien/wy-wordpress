@import 'mixins'
@import 'GGS'
@import 'home'
@import 'donate'
@import 'qeros'
@import 'expeditions'

html, body
  width 100%
  height 100%

.the-page
  height 100%
  transition -webkit-filter 0.66s ease-in-out

// Sitewide

section
  overflow hidden
  position relative
  background-repeat no-repeat
  transition bottom 0.2s ease, background-position-y 0.1s ease

.cover
  height 100%
  z-index 2
  cursor url(urlbase + 'arrow.svg'), auto
  .bg
    background-size cover
    background-repeat no-repeat

.bg
  position absolute
  width 100%
  height 100%
  background-repeat no-repeat
  transition background-size 0.2s ease
  transform scaleX(-1)

.caption
  GentiumBook()
  color wyRed
  line-height 1.33em
  padding 4em 0
  background #fff
  width 100%


.fixed-img
  position absolute
  top 0
  left 0
  background-size cover
  background-position center center
  height 117%
  width 100%

.img-placeholder
  height 85%
  background transparent
  background-size 105% auto
  background-position center center
  background-repeat no-repeat

.fixed
  position fixed
  z-index 1
  bottom -2em

.no-cover
  background-size auto 100%
  background-position center center
  background-attachment scroll

#cover-arrow
  width 30px
  height 60px
  position absolute
  top 0
  left 0


